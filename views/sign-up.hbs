<div id="form">
  <h2>Signup</h2>
  <form action="/sign-up" method="POST">
    <label>Username
      <input type="text" name="username" />
    </label>

    <label>Password
     <input type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">Create account</button>
    <a href="/login">log in</a>

  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}
  </form>
</div>